<Window x:Class="SnDbSizeTesterApp.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SnDbSizeTesterApp"
        mc:Ignorable="d"
        Title="Connection parameters" Height="321" Width="678" WindowStartupLocation="CenterOwner">
    <Grid>
        <Label x:Name="UrlLabel" Content="{Binding Path=Url, Mode=OneWay, FallbackValue=UrlLabel}" VerticalAlignment="Top" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontWeight="Bold" FontSize="14" Height="36" Background="#FFECECEC"/>
        <Label Content="Client ID:" HorizontalAlignment="Left" Margin="10,41,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="ClientIdTextBox" Text="{Binding Path=ClientId, Mode=TwoWay, FallbackValue=ClientIdTextBox}" HorizontalAlignment="Left" Margin="10,67,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="223" Height="26" FontSize="14" FontWeight="Bold" VerticalContentAlignment="Center"/>
        <Label Content="Secret:" HorizontalAlignment="Left" Margin="10,98,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="SecretTextBox" Text="{Binding Path=Secret, Mode=TwoWay, FallbackValue=SecretTextBox}" Margin="10,124,10,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="26" FontSize="14" FontWeight="Bold" VerticalContentAlignment="Center"/>
        <Label Content="ConnectionString:" HorizontalAlignment="Left" Margin="10,155,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="ConnectionStringTextBox" Text="{Binding Path=ConnectionString, Mode=TwoWay, FallbackValue=ConnectionStringTextBox}" Margin="10,181,10,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="26" FontSize="14" FontWeight="Bold" VerticalContentAlignment="Center"/>
        <Button IsDefault="True" x:Name="ConnectButton" Content="Connect" Margin="0,0,10,14" FontSize="14" FontWeight="Bold" HorizontalAlignment="Right" Width="70" Height="28" VerticalAlignment="Bottom" Click="ConnectButton_Click"/>
        <Button IsCancel="True" x:Name="CancelButton" Content="Cancel" Margin="0,0,99,14" FontSize="14" HorizontalAlignment="Right" Width="70" Height="28" VerticalAlignment="Bottom"/>

    </Grid>
</Window>
